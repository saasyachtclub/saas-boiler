# 🌐 SaaS Yacht Club - Environment Configuration
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# ================================
# 🗄️ DATABASE CONFIGURATION
# ================================
# Neon PostgreSQL Database URL
# Get yours at: https://neon.tech
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# ================================
# 🔐 AUTHENTICATION (Better Auth)
# ================================
# Generate a secure secret (min 32 characters)
# You can use: openssl rand -base64 32
BETTER_AUTH_SECRET="your-super-secure-secret-key-min-32-characters-long"

# Your application URL
BETTER_AUTH_URL="http://localhost:3000"

# ================================
# 💳 STRIPE PAYMENTS
# ================================
# Get your keys at: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"

# Stripe Webhook Secret (from Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# ================================
# 📧 EMAIL (Resend)
# ================================
# Get your API key at: https://resend.com
RESEND_API_KEY="re_your_resend_api_key_here"

# Email from address
EMAIL_FROM="noreply@yourdomain.com"

# ================================
# 📊 ANALYTICS & MONITORING
# ================================
# PostHog Analytics - Get yours at: https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY="phc_your_posthog_key_here"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Sentry Error Tracking - Get yours at: https://sentry.io
SENTRY_DSN="https://your_sentry_dsn_here@sentry.io/project_id"

# Axiom Logging - Get yours at: https://axiom.co
AXIOM_TOKEN="xaat-your-axiom-token-here"

# ================================
# 🔄 REDIS (Upstash)
# ================================
# For rate limiting and caching
# Get yours at: https://upstash.com
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_redis_token_here"

# ================================
# 🚀 DEPLOYMENT
# ================================
# Node Environment
NODE_ENV="development"

# ================================
# 🔒 SECURITY
# ================================
# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# ================================
# 📱 SOCIAL AUTH (Optional)
# ================================
# Google OAuth
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# ================================
# 🎨 CUSTOMIZATION (Optional)
# ================================
# App Name
NEXT_PUBLIC_APP_NAME="SaaS Yacht Club"

# App URL
NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# Support Email
NEXT_PUBLIC_SUPPORT_EMAIL="support@yourdomain.com"

# ================================
# 🔧 DEVELOPMENT (Optional)
# ================================
# Disable telemetry
NEXT_TELEMETRY_DISABLED="1"
